                    <argument name="user_view_model" xsi:type="object">Tan\EnhancedEcommerce\ViewModel\UserBaseInformation</argument>
                    <argument name="user_coupon_view_model" xsi:type="object">Tan\EnhancedEcommerce\ViewModel\UserCouponInformation</argument>
                    <argument name="user_reward_view_model" xsi:type="object">Tan\EnhancedEcommerce\ViewModel\UserRewardInformation</argument>
                    <argument name="user_subscribe_view_model" xsi:type="object">Tan\EnhancedEcommerce\ViewModel\UserSubscribeInformation</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
